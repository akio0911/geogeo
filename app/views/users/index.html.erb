<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Twitter</th>
    <th>Flickr</th>
    <th>Flickr Feed</th>
    <th>Group</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.twitter_id %></td>
    <td><%=h user.flickr_id %></td>
    <td><%=h user.flickr_feed_url %></td>
    <td><%=h "#{user.group_id}:#{user.group.name}" %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
