<h1>New status</h1>

<% form_for(@status) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </p>
  <p>
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :status_text %><br />
    <%= f.text_area :status_text %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.select :user_id, User.find(:all).map{|u|["#{u.id}:#{u.name}",u.id]} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', statuses_path %>
